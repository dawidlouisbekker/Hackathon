<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HackaThon.Login"
             Title="login">
    <VerticalStackLayout>
        <Entry x:Name="username" Placeholder="Enter Username" HorizontalOptions="Center" VerticalOptions="Start" Margin="10"/>
        <Entry x:Name="password" Placeholder="Enter Password" HorizontalOptions="Center" VerticalOptions="Start" Margin="10"/>
        <Button HorizontalOptions="Center" VerticalOptions="Start" Margin="10" Clicked="SendCred" Text="Submit"/>
    </VerticalStackLayout>
</ContentPage>